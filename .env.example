# .env.example

# Application Environment
NODE_ENV=development

# Blockchain Network Configuration
DEFAULT_NETWORK=optimism
USE_TESTNETS=true

# API Configuration
API_BASE_URL=http://localhost:8000
WS_ENDPOINT=ws://localhost:8001

# Gas Reporter
REPORT_GAS=false
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key

# Arbitrage Executor
ARBITRAGE_EXECUTOR_ETHEREUM=
ARBITRAGE_EXECUTOR_POLYGON=
ARBITRAGE_EXECUTOR_BSC=
ARBITRAGE_EXECUTOR_ARBITRUM=
ARBITRAGE_EXECUTOR_OPTIMISM=

# Feature Flags
ENABLE_ARBITRAGE_EXECUTION=true
ENABLE_PRICE_MONITORING=true
ENABLE_WALLET_CONNECT=true
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_MODE=true

# CDN Configuration
CDN_BASE_URL=

# Miscellaneous
APP_NAME=FlashTrade Logic
API_VERSION=v1
